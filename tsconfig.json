{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "declarationDir": "./build",
    "moduleResolution": "node",
    "sourceMap": true,

  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}